<html lang="en">
<head>
  <title>WikiCourse</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="css/tag-style.css">
</head>
<body>
<div id="menu">
  <div id="menu-info">
    Select your track:
  </div>
  <ul id="track-menu">
    <%  Track.all_tracks.each do |track| %>
      <li class="track-label">
        <%= link_to track, courses_main_path(track:track) %>
      </li>
    <% end %>
  </ul>
  <div id="logo">
    WikiCourse
  </div>
</div>
<h2> All Courses </h2>
<div class="main">
  <table class="table table-striped col-md-12" id="course">
    <thead>
    <tr>
      <th>call</th>
      <th>title</th>
      <th>number</th>
      <th>pts</th>
      <th>description</th>
      <th hidden=true>track</th>
      <th hidden=true>breadth</th>
      <th hidden=true>required</th>
      <th hidden=true>elective</th>
      <th hidden=true>elective_group</th>
      <th hidden=true>required_group</th>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.call %>
        </td>
        <td>
          <%= course.title %>
        </td>
        <td>
          <%= course.number %>
        </td>
        <td>
          <%= course.pts %>
        </td>
        <td>
          <%= course.description %>
        </td>
        <td hidden=true>
          <%= course.track %>
        </td>
        <td hidden=true>
          <%= course.breadth %>
        </td>
        <td hidden=true>
          <%= course.required %>
        </td>
        <td hidden=true>
          <%= course.elective %>
        </td>
        <td hidden=true>
          <%= course.elective_group %>
        </td>
        <td hidden=true>
          <%= course.required_group %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</body>
</html>