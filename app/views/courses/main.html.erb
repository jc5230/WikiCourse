<html lang="en">
<head>
  <title>WikiCourse</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="css/tag-style.css">
</head>
<body>
<div id="menu">
  <div id="menu-info">
    Select your track:
  </div>
  <ul id="track-menu">
    <%  Track.all_tracks.each do |track| %>
      <li class="track-label"><%= track %></li>
    <% end %>
  </ul>
  <div id="logo">
    WikiCourse
  </div>
</div>
<h2> All Courses </h2>
<div class="main">
<ul class="ks-cboxtags">
  <li>
    <input type="checkbox" id="checkboxOne" value="Order one">
    <label for="checkboxOne">Required Track Courses</label>
  </li>
  <li>
    <input type="checkbox" id="checkboxTwo" value="Order Two">
    <label for="checkboxTwo">Track Electives</label>
  </li>
  <li>
    <input type="checkbox" id="checkboxThree" value="Order Three">
    <label for="checkboxThree">Breadth - Systems</label>
  </li>
  <li>
    <input type="checkbox" id="checkboxFour" value="Order Four">
    <label for="checkboxFour">Breadth - Theory</label>
  </li>
  <li>
    <input type="checkbox" id="checkboxFive" value="Order Five">
    <label for="checkboxFive">Breadth - AI & Applications</label>
  </li>
</ul>
<table class="table table-striped col-md-12" id="course">
  <thead>
    <tr>
      <th>call</th>
      <th>title</th>
      <th>number</th>
      <th>pts</th>
      <th>description</th>
      <th>track</th>
      <th>breadth</th>
      <th>required</th>
      <th>elective</th>
      <th>elective_group</th>
      <th>required_group</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.call %>
        </td>
        <td>
          <%= course.title %>
        </td>
        <td>
          <%= course.number %>
        </td>
        <td>
          <%= course.pts %>
        </td>
        <td>
          <%= course.description %>
        </td>
        <td>
          <%= course.track %>
        </td>
        <td>
          <%= course.breadth %>
        </td>
        <td>
          <%= course.required %>
        </td>
        <td>
          <%= course.elective %>
        </td>
        <td>
          <%= course.elective_group %>
        </td>
        <td>
          <%= course.required_group %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>
</html>